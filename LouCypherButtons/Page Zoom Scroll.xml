  <date id="date" value="20120329"/>
  <name>Page Zoom Scroll</name>
  <image><![CDATA[data:image/x-icon;base64,]]></image>
  <mode>0</mode>
  <initcode><![CDATA[this.removeEventListener("DOMMouseScroll", this.scroll, false);

this.zoomIn = function() {
  try {
    ZoomManager.prototype.getInstance().enlarge();
  } catch(e) {
    FullZoom.enlarge();
  }
}

this.zoomOut = function() {
  try {
    ZoomManager.prototype.getInstance().reduce();
  } catch(e) {
    FullZoom.reduce();
  }
}

this.zoomNormal = function() {
  try {
    ZoomManager.prototype.getInstance().reset();
  } catch(e) {
    FullZoom.reset();
  }
}

this.scroll = function(aEvent) {
  if(aEvent.detail > 0) {
    this.zoomOut();
  } else {
    this.zoomIn();
  }
}

this.onclick = function(aEvent) {
  if (aEvent.button == 1) {
    this.zoomNormal();
  }
}

this.addEventListener("DOMMouseScroll", this.scroll, false);

]]></initcode>
  <code><![CDATA[if (ZoomManager.zoom != 1) {
  this.zoomNormal();
} else {
  custombuttons.uChelpButton(this);
}
]]></code>
