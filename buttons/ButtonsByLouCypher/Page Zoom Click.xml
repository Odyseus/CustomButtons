  <initcode><![CDATA[this.showContext = function(aNode) {
  var popup = document.getElementById("custombuttons-contextpopup");
  var x = aNode.boxObject.x + (aNode.boxObject.width / 2);
  var y = aNode.boxObject.y + (aNode.boxObject.height / 2);
  document.popupNode = aNode;
  if ("openPopup" in popup) {
    popup.openPopup(null, "before_end", x, y, true, false);
  } else {
    popup.showPopup(aNode, x, y, "popup", null, null);
  }
}

this.zoomIn = function() {
  try {
    ZoomManager.prototype.getInstance().enlarge();
  } catch(e) {
    FullZoom.enlarge();
  }
}

this.zoomOut = function() {
  try {
    ZoomManager.prototype.getInstance().reduce();
  } catch(e) {
    FullZoom.reduce()
  }
}

this.zoomNormal = function() {
  try {
    ZoomManager.prototype.getInstance().reset();
  } catch(e) {
    FullZoom.reset();
  }
}

this.clickEvent = function(aEvent) {
  switch (aEvent.button) {
    case 0:
      if (aEvent.shiftKey || aEvent.ctrlKey || aEvent.metaKey) {
        this.showContext(this);
      } else {
        this.zoomIn();
      }
      break;
    case 1: this.zoomNormal(); break;
    case 2: this.zoomOut();
  }
}

this.setAttribute("context", "");
this.setAttribute("onclick", "this.clickEvent(event);");
this.tooltipText = this.Help;

]]></initcode>
